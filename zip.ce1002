#!/bin/bash
Pname=`echo $1 | tr "[:upper:]" "[:lower:]"`

user=
while read line
do
    if [[ $line =~ user=(.*) ]] ;then
        user=${BASH_REMATCH[1]}
    fi
done < "$HOME"'/.config/auto_upload.ce1002'

if [[ -z $user ]];then
    echo 'user is None.'
    exit
fi

mkdir -p /tmp/ce1002/s"$user"
from="$HOME"/ce1002/src/ce1002/"$Pname"/s"$user"
to="/tmp/ce1002"
cp -r $from $to

cd /tmp/ce1002
zip s"$user".zip -r s"$user"
mv /tmp/ce1002/s"$user".zip "$HOME"/s"$user".zip
rm -r /tmp/ce1002
